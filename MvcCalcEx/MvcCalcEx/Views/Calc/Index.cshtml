@model MvcCalcEx.Models.CalcModel

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.Label("input 1")
    //løs binding på variablen Num1 der indeholder Num1's værdi
    @Html.TextBox("Num1", Model.Num1);
    @Html.Label("input 2")
    //stærk binding på variablen Num2 der indeholder Num2's værdi
    @Html.TextBoxFor(Model => Model.Num2, Model.Num2);
    <br />
    @Html.Label("Result", Model.Result);
    <br />
    <input type="submit" name="submit" id="submitAdd" value="add" />
    <input type="submit" name="submit" id="submitSubtract" value="subtract" />
    <input type="submit" name="submit" id="submitDivide" value="divide" />
    <input type="submit" name="submit" id="submitMultiply" value="multiply" />

}